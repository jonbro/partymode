<html>
<head>
  <title>Partymode: Replies</title>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= javascript_include_tag 'prototype' %>
  <%= javascript_include_tag 'effects' %>

	<link rel="alternate" type="application/rss+xml" title="RSS" href="<%= url_for :controller => 'posts', :action => 'rss' %>" />
</head>
<body>
<p style="color: green"><%= flash[:notice] %></p>

<ul id='main_menu'>
	<% unless @user %>
	  <li><%= link_to_function "signup", "document.getElementById('signup').style.display='block'" %></li>
	  <li><%= link_to_function "login", "document.getElementById('login').style.display='block'" %></li>
	<% else %>
	  <%= link_to "logout", :controller => "posts", :action => "logout" %>
	<% end %>
	<li><a href='http://partymode.org/chat'>chat</a></li>
	<li><a href='../../wiki/wiki.php'>the wiki</a></li>
	<li><a href='../../wiki/wiki.php?page=PageList'>wiki: recent changes</a></li>
	<li><%= link_to "rss", :controller => "posts", :action => "rss" %></li>
</ul>
<div id='signup'>
	<%= form_tag :controller => "posts", :action => 'signup' %>
		<%= render :partial => 'posts/sign_up' %>
	</form>
</div>
<div id='login'>
	<%= form_tag :controller => "posts", :action => 'login' %>
		<%= render :partial => 'posts/login' %>
	</form>
</div>
<div id='party_shout'>

<h1><%= link_to "party shout", :controller => 'posts', :action => 'list' %>
	<% if @title %>
		: <span style='color:#888'><%= @title %></span>
	<% end %>
</h1>

<%= render :partial => 'posts/party_file' %>

<%= yield %>

<script src="http://www.google-analytics.com/urchin.js" type="text/javascript">
</script>
<script type="text/javascript">
_uacct = "UA-251531-1";
urchinTracker();
</script>
</body>
</html>
